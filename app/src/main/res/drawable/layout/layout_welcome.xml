<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff0e1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/color_99FFAE43">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="74dp"
            android:layout_height="140dp"
            android:src="@mipmap/girl"

            />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="87dp"
                android:layout_marginStart="20dp"
                android:src="@mipmap/chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:text="Enter your target body fat percentage and weight."
                android:textColor="@color/color_fda341"
                android:textSize="12sp" />
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="150dp"
        android:src="@mipmap/road" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="130dp"
        android:src="@mipmap/goals" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="250dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Target body fat percentage "
            android:textColor="@color/color_fda341"
            android:textSize="15sp" />

        <EditText
            android:layout_width="250dp"
            android:paddingStart="20dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shapre_orange"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="350dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Target weight "
            android:textColor="@color/color_fda341"
            android:textSize="15sp" />

        <EditText
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:paddingStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shapre_orange"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="450dp"
        android:background="@drawable/shapre_orange"
        android:gravity="center"
        android:text="Next"
        android:textColor="@color/black"
        android:textSize="15sp" />
</FrameLayout>